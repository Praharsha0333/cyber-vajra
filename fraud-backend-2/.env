# Environment Configuration for Enhanced Fraud Detection System
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# VirusTotal API Key (Optional but recommended)
# Get your free API key from: https://www.virustotal.com/gui/join-us
# Free tier: 4 requests/minute, 500 requests/day
VIRUSTOTAL_API_KEY=7e99f2cdcb1e0daa1aafc62e7ffb17a0c424254b78582917e78f0bd67e669a53
GOOGLE_SAFE_BROWSING_KEY=AIzaSyDVeXxsG95NyHBD6NLSr_XK__miiMUT4nE

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Environment mode
# Options: development, production
FLASK_ENV=production

# Server configuration
HOST=127.0.0.1


PORT=5001

# Debug mode (only for development)
# FLASK_DEBUG=true

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Cache duration in seconds (default: 3600 = 1 hour)
CACHE_DURATION=3600

# Maximum batch analysis size (default: 10)
MAX_BATCH_SIZE=10

# Screenshot cleanup interval in days (default: 7)
SCREENSHOT_CLEANUP_DAYS=7

# =============================================================================
# ANALYZER WEIGHTS (Optional - overrides defaults)
# =============================================================================

# Risk scoring weights (must sum to 1.0)
# DOMAIN_WEIGHT=0.25
# CONTENT_WEIGHT=0.20
# REPUTATION_WEIGHT=0.35
# VISUAL_WEIGHT=0.20

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/fraud_detection.log

# =============================================================================
# SELENIUM CONFIGURATION (for visual analysis)
# =============================================================================

# Chrome driver path (optional - auto-detected if not set)
# CHROME_DRIVER_PATH=/usr/bin/chromedriver

# Screenshot timeout in seconds
SCREENSHOT_TIMEOUT=30

# Page load timeout in seconds  
PAGE_LOAD_TIMEOUT=20

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Maximum request size in MB
MAX_CONTENT_LENGTH=16

# Rate limiting (requests per minute per IP)
# RATE_LIMIT=60

# Allowed origins for CORS (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://your-frontend.com

# =============================================================================
# DATABASE CONFIGURATION (Future use)
# =============================================================================

# If you plan to add persistent storage
# DATABASE_URL=sqlite:///fraud_detection.db
# REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING AND ALERTS (Future use)
# =============================================================================

# Email notifications for system errors
# ADMIN_EMAIL=admin@yourcompany.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password